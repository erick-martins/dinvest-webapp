{
	"name": "dinvest",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"start": "DISABLE_ESLINT_PLUGIN=true craco start",
		"build": "craco build",
		"test": "craco test",
		"eject": "react-scripts eject",
		"lint": "run-s lint:typescript lint:code",
		"lint:fix": "eslint --fix \"**/*.{js,jsx,ts,tsx}\"",
		"lint:code": "eslint \"**/*.{js,jsx,ts,tsx}\"",
		"lint:typescript": "tsc --noEmit -p tsconfig.json",
		"lint-staged": "lint-staged --config lint-staged.js",
		"format": "prettier --write './**/*.{js,jsx,ts,tsx,css,md,json}' --config ./.prettierrc",
		"postinstall": "husky install"
	},
	"dependencies": {
		"@craco/craco": "^6.4.3",
		"@fortawesome/fontawesome-svg-core": "^6.1.1",
		"@fortawesome/free-solid-svg-icons": "^6.1.1",
		"@fortawesome/react-fontawesome": "^0.1.18",
		"@reduxjs/toolkit": "^1.8.2",
		"@testing-library/jest-dom": "^5.14.1",
		"@testing-library/react": "^13.0.0",
		"@testing-library/user-event": "^13.2.1",
		"@types/jest": "^27.0.1",
		"@types/node": "^16.7.13",
		"@types/react": "^18.0.0",
		"@types/react-dom": "^18.0.0",
		"autoprefixer": "10.4.5",
		"axios": "^0.27.2",
		"bootstrap": "^5.1.3",
		"debounce": "^1.2.1",
		"husky": "^8.0.1",
		"i18next": "^21.8.10",
		"i18next-browser-languagedetector": "^6.1.4",
		"lint-staged": "^13.0.3",
		"moment": "^2.29.3",
		"node-sass": "^7.0.1",
		"react": "^18.2.0",
		"react-bootstrap": "^2.4.0",
		"react-dom": "^18.2.0",
		"react-i18next": "^11.17.2",
		"react-redux": "^8.0.2",
		"react-router-dom": "6",
		"react-scripts": "5.0.1",
		"tsc-files": "^1.1.3",
		"typescript": "^4.4.2",
		"web-vitals": "^2.1.0"
	},
	"devDependencies": {
		"@types/debounce": "^1.2.1",
		"@typescript-eslint/eslint-plugin": "^5.29.0",
		"@typescript-eslint/parser": "^5.29.0",
		"eslint": "^8.18.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier": "^4.0.0",
		"eslint-plugin-react": "^7.30.1",
		"pinst": "^3.0.0",
		"prettier": "^2.7.1",
		"yarn-run-all": "^3.1.1"
	},
	"eslintConfig": {
		"extends": [
			"react-app",
			"react-app/jest"
		]
	},
	"resolutions": {
		"autoprefixer": "10.4.5"
	},
	"overrides": {
		"autoprefixer": "10.4.5"
	},
	"jest": {
		"moduleNameMapper": {
			"^@config(.*)$": "<rootDir>/src/config$1",
			"^@definitions(.*)$": "<rootDir>/src/definitions$1",
			"^@styles(.*)$": "<rootDir>/src/styles$1",
			"^@domains(.*)$": "<rootDir>/src/domains$1",
			"^@assets(.*)$": "<rootDir>/src/assets$1",
			"^@components(.*)$": "<rootDir>/src/components$1",
			"^@layouts(.*)$": "<rootDir>/src/layouts$1",
			"^@pages(.*)$": "<rootDir>/src/pages$1",
			"^@i18n(.*)$": "<rootDir>/src/i18n$1",
			"^@services(.*)$": "<rootDir>/src/api/services$1",
			"^@app(.*)$": "<rootDir>/src$1",
			"^@mocks(.*)$": "<rootDir>/__mocks__$1"
		}
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	}
}
